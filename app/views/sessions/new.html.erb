<h1>Login</h1>

<%= form_with(url: login_path, local: true) do |form| %>

  <% if flash[:alert] %>
    <div id="error_explanation" class="alert alert-danger" role="alert">
      <p><%= flash[:alert] %></p>
    </div>
  <% end %>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.submit "Login" %>
  </div>
<% end %>